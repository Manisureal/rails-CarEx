<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h2>Create your Booking</h2>
      <%= simple_form_for([@car, @booking]) do |f| %>
        <%= f.input :booked_time, label: 'Please choose your booking date...' %>
        <%= f.submit class: "btn btn-success"%>
      <% end %>
    </div>
  </div>
</div>


