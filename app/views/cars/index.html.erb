


<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-xs-6 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1503376780353-7e6692767b70?auto=format&fit=crop&w=1650&q=60&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D');">
          <div class="card-category"><%= car.make %></div>
          <div class="card-description">
            <h2><%= car.model %></h2>
            <p><%= car.color %></p>
          </div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/e">
          <a class="card-link" href="#" ></a>
        </div>
      </div>
    <% end %>
  </div>
</div>
