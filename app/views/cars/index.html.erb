


<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-xs-6 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= car.image_url %>');">
          <div class="card-category"><%= car.make %></div>
          <div class="card-description">
            <h2><%= car.model %></h2>
            <p><%= car.color %></p>
          </div>
          <img class="card-user" src="http://static.dnaindia.com/sites/default/files/styles/half/public/1841563.jpg?itok=95S9ZkkB">
          <%= link_to "", car_path(car.id), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
